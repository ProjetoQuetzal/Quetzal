<!DOCTYPE html>
<html>
<head>
  <title>Quetzal</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class ="title"><h2>Projeto Quetzal</h2></div>
    <% if current_user %>
        <%= link_to "Home", '/' %> | <%= current_user.email %> | <%= link_to "Edit", controller:"users", action:"edit", id:current_user.id %> | <%= link_to "Logout", '/logout' %>
    <% else %>
        <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
    <% end %>

<%= yield %>
 

</body>
</html>
