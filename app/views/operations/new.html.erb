<h1>Registrando nova operação</h1>

<%= form_for :operation, :action => 'create' do |f| %>

	Controller: <%= f.text_field :controller %><br/>
  Action: <%= f.text_field :action %><br/>
  <br/>
  <p>
    <div>
      <h4>Permissão</h4>
    </div>
  	<% @roles.each do |role| %>
  	<div>
  		<%= check_box_tag "role_titles[]", role.title, false %>
  		<%= role.title %>
  	</div>
  	<% end %>
  </p>

  <%= f.submit "Save" %>

<% end %>
