<div class="form">
<div class="bkgd">
	
	<div class="title">
		<h2>Crie sua conta</h2>
	</div>

	<%= form_for :user, url: '/users' do |f| %>

		<%= f.text_field :name, :placeholder => "Insira seu nome" %><br/>
		<%= f.email_field :email, :placeholder => "Insira seu email" %> <br/>
		<%= f.password_field :password, :placeholder => "Insira sua senha" %> <br/>
		<%= f.password_field :password_confirmation, :placeholder => "Confirme sua senha" %><br/>
		<%= f.submit "Enviar" %>

<% end %>

</div>
</div>