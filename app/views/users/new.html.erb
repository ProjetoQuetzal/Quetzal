<div class="form">
<div class="bkgd">

<div id="main" class="container-fluid">
  <h3 class="page-header">Crie sua conta</h3

  <form action="Enviar">	
  <hr/>


		<%= form_for :user, url: '/users' do |f| %>
		<%= fields_for :user_description do |d| %>
		<div class="row">
			<div class="form-group col-md-4">
				<label for=":name"> Nome </label>
				<input type="text" class="form-control" <%= d.text_field :name, :placeholder => "Insira seu nome" %>
			</div>
			
			<div class="form-group col-md-4">
				<label for=":last_name">Sobrenome</label>
				<input type="text" class="form-control" <%= d.text_field :last_name, :placeholder => "Insira seu sobrenome" %>
			</div>

			<div class="form-group col-md-4">
				<label for=":date_of_birth"> Data de Nascimento</label>
				<input type="text" maxlength="8" class="form-control" <%= d.text_field :date_of_birth, :placeholder => "Insira sua data de nascimento"%>
			</div>
  
			<div class="form-group col-md-3">
				<label for=":registration">Matrícula</label>
				<input type="text" maxlength="9" class="form-control" <%= d.text_field :registration, :placeholder => "Insira sua matrícula" %>
			</div>

			<div class="form-group col-md-3">
				<label for=":phone_number">Telefone</label>
				<input type="text" maxlength="11" class="form-control" <%= d.text_field :phone_number, :placeholder => "Insira seu telefone" %>
			</div>

			<div class="form-group col-md-3">
				<label for=":address"> Endereço</label>
				<input type="text" class="form-control" <%= d.text_field :address, :placeholder => "Insira seu endereço" %>
			</div>
			<% end %>

			<div class="form-group col-md-3">
				<label for=":email">E-mail</label>
				<input type="text" class="form-control" <%= f.email_field :email, :placeholder => "Insira seu email" %>
			</div>

			<div class="form-group col-md-2">
				<label for=":password">Senha</label>
				<input type="password" class="form-control"	<%= f.password_field :password, :placeholder => "Insira sua senha" %>
			</div>

			<div class="form-group col-md-2">
				<label for=":password_confirmation">Confirmação da senha</label>
				<input type="password" class="form-control"	<%= f.password_field :password_confirmation, :placeholder => "Confirme sua senha" %>
			</div>
		</div>
	<hr/>
		  
  <div id="Enviar" class="row">

  	<div class="col-md-12">
			<div id="Enviar" class="row">
  				<div class="col-md-12">
   					<button type="submit"  a href="Enviar" class="btn btn-success">Salvar</button>
         			<a href="index.html"  a href="/users" class="btn btn-warning">Cancelar</a>

				</div>
			</div>
		<% end %>
	</div>
  </div>
  </form>
</div>

</div>
</div>